generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  borrows   Borrow[]
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  author    String
  year      Int
  borrows   Borrow[]
}

model Borrow {
  id         Int       @id @default(autoincrement())
  userId     Int
  bookId     Int
  borrowDate DateTime  @default(now())
  returnDate DateTime?
  rating     Decimal?  @db.Decimal(4,2)  // 2 decimal places (Ã¶rn: 8.75)
  user       User      @relation(fields: [userId], references: [id])
  book       Book      @relation(fields: [bookId], references: [id])
} 